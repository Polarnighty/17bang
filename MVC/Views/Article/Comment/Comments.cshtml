@model List<SRV.ViewModel.CommentModel>

@for (int i = 0; i < Model.Count; i++)
{
    var comment = Model[i];    
    if (comment.CommentId == null)
    {
        comment.Floor = i + 1;        
        <div class="comment clearfix" data-id="@comment.Id" comments  @("comment-" + comment.Id)>
            @Html.Partial("Comment/Comment", comment)
            @if (comment.CommentBy.Count != 0)
            {
                foreach (var item in comment.CommentBy)
                {
                    <div class="commentBy" data-id="@item.Id" @("comment-"+item.Id)>
                        @Html.Partial("Comment/Comment", item)
                    </div>
                }
            }
        </div>
    }
}

