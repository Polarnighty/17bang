@model SRV.ViewModel.CommentModel

<div>
    <small class="text-muted"><span class="fa fa-calendar"></span><span style="margin:0px 5px;">@Model.CommentTime</span></small>
    @if (Model.Floor != null)
    {
        <small class="text-primary" @("floor-"+Model.Id)>--- 第 @Model.Floor 楼 ---</small>
    }
</div>
<div style="margin:10px 0;">
    @Html.Raw(Model.Content);
</div>
<div class="pull-right">
    <a href="#new-comment" style="margin-left:10px" delete>
        <i class="fa fa-trash" style="margin-right:3px"></i>删除
    </a>
    <a href="#new-comment" style="margin-left:10px" data-id="@Model.Id" data-cid="@Model.CommentId" Reply>
        <i class="fa fa-reply" style="margin-right:3px"></i>回复
    </a>
</div>
