@model SRV.ViewModel.NewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="page-header">
    <span class="fa fa-pencil-square-o " aria-hidden="true"></span> 文章发布
</h2>
<div class="row">
    <div class="col-md-9">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>标题：（* 必填）</label>
                @Html.TextBoxFor(n => n.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(n => n.Title)
            </div>
            <script src="/Scripts/kindeditor/kindeditor-all-min.js"></script>
            <script src="/Scripts/kindeditor/lang/zh-CN.js"></script>
            <script src="/Scripts/kindeditor.help.js"></script>

            <div class="form-group">
                <label>内容：（* 必填）</label>
                @*<textarea class="ke-edit-textarea" hidefocus="true" style="width: 100%; height: 568px; display: none;"></textarea>*@
                @Html.TextAreaFor(n => n.Body, new { @class = "form-control", kindEditor = string.Empty, cols = "20", rows = "4", Styles = "height: 568px; " })
                @Html.ValidationMessageFor(n => n.Body)
            </div>
            <div class="form-group">
                <label>关键字：（* 必填）</label>
                @Html.TextBoxFor(n => n.Keywords, new { @class = "form-control", placeholder = "用空格分割，总长度不超过25个字符" })
                @Html.ValidationMessageFor(n => n.Keywords)
            </div>
            <div class="form-group">
                <label>摘要：（* 选填）</label>
                @Html.TextAreaFor(n => n.Summary, new { rows = "4", @class = "form-control", placeholder = "不填写的话，系统会截取文章前255字作为摘要显示" })
                @Html.ValidationMessageFor(n => n.Summary)
            </div>
            <div class="submit" style="margin-top:50px;">
                <input type="submit" class="btn btn-primary loading" value="提交">
                <input type="reset" class="btn btn-default" value="重置">
            </div>

        }

    </div>
</div>
<script>
    simpleConfig.height = '568px'
</script>
<style>
    label {
        display: inline-block;
        max-width: 100%;
        margin-bottom: 5px;
        font-weight: bold;
    }
</style>


