@model MVC.Models.NewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New</h2>
<div style="margin-top:55px" class="row">
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <div>标题：（* 必填）</div>
                @Html.TextBoxFor(n => n.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(n => n.Title)
            </div>
            <div class="form-group">
                <div>摘要：（* 选填）</div>
                @Html.TextAreaFor(n => n.Body, new { @class = "form-control" })
                @Html.ValidationMessageFor(n => n.Title)
            </div>
            <div class="form-group">
                <div>内容：（* 必填）</div>
                @Html.TextAreaFor(n => n.Body, new { @class = "form-control" ,Styles="min-height:400px;"})
                @Html.ValidationMessageFor(n => n.Title)
            </div>
            <div class="submit">
                <input type="submit" class="btn btn-primary loading" value="提交">
                <input type="reset" class="btn btn-default" value="重置">
            </div>

        }


    </div>
</div>



