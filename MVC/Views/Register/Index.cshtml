@model MVC.Models.RegisterModel
@{
    ViewBag.Title = "Home Page";
}


<style>
    .field-validation-error {
        color: red;
        font-size: 12px;
    }

    .yellow-highlight {
        background-color: #ffffe0;
        border: 2px dashed #eee;
        border-radius: 4px 5px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .page-header {
        padding-bottom: 9px;
        margin: 40px 0 20px;
        border-bottom: 1px solid #eee;
    }

    .row {
        margin-right: -15px;
        margin-left: -15px;
    }
</style>
<div class="container body-content">
    <div class="page-header">
        <h2>
            <span class="fa fa-registered " aria-hidden="true"></span> 注册
        </h2>
    </div>

    <div class="row">
        <div class="col-lg-4 col-md-5">
            <form method="post">
                <section style="padding:0 10px 0 10px; margin-bottom:10px;" class="yellow-highlight">
                    <div class="form-group">
                        <label>邀请人：（* 必填）</label>
                        <input class="form-control valid" asp-for="NewUser.InviterBy.UserName" />
                        <span asp-validation-for="NewUser.InviterBy.UserName"></span>
                    </div>
                    <div class="form-group">
                        <label>邀请码：（* 必填）</label>
                        <input class="form-control valid" asp-for="NewUser.InviterBy.InviterCode" />
                        <span asp-validation-for="NewUser.InviterBy.InviterCode"></span>
                    </div>
                </section>
                <div class="form-group">
                    <label>用户名：（* 必填）</label>
                    <input class="form-control valid" asp-for="NewUser.UserName" />
                    <span asp-validation-for="NewUser.UserName"></span>
                </div>
                <div class="form-group">
                    <label>密码：（* 必填）</label>
                    <input type="password" class="form-control valid" asp-for="NewUser.Password" />
                    <span asp-validation-for="NewUser.Password"></span>
                </div>
                <div class="form-group">
                    <label>验证密码：（* 必填）</label>
                    <input type="password" class="form-control valid" asp-for="ConfirmPassword " />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="submit">
                    <input type="submit" class="btn btn-primary loading" value="提交">
                    <input type="reset" class="btn btn-default">
                    <a href="/log/on" class="btn pull-right"><span class="fa fa-sign-in"></span> 登录</a>
                </div>
            </form>
        </div>
    </div>

</div>

<style>
    .pagination {
        display: inline-block;
        padding-left: 0;
        margin: 20px 0;
        border-radius: 4px;
    }

        .pagination > li {
            display: inline;
        }

    .container {
        padding-right: 15px;
        padding-left: 15px;
        margin-right: auto;
        margin-left: auto;
    }

    .clearfix {
        clear: both;
    }
</style>