@model SRV.ViewModel.PageModel

<nav class="pull-right">
    <ul class="pagination">
        @if (Model.CurrentPage != 1)
        {
            <a href="@Model.ActionName/@(Model.CurrentPage-1)">上一页</a>
        }
        @for (int i = Model.CurrentPage; i <= Model.CurrentPage + 4; i++)
        {
            if (i > Model.TotalPage)
            {
                break;
            }
            if (i == Model.CurrentPage)
            {
                <li class="active">
                    <a href="@Model.ActionName/@i">@i</a>
                </li>
            }
            else
            {
                <li>
                    <a href="@Model.ActionName/@i">@i</a>
                </li>
            }
        }
        @if (Model.CurrentPage != Model.TotalPage)
        {
            <li>
                <a href="@Model.ActionName/@(Model.CurrentPage+1)">下一页</a>
            </li>
        }
    </ul>
</nav>

<style>
    .currenPage {
        background-color: black;
    }
</style>